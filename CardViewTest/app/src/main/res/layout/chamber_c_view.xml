<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e3e7ff"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="1dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardCornerRadius="10dp"
        android:background="#ffffff">



                <RelativeLayout
                    android:id="@+id/chamber_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:background="#ffffff">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Chamber Address"
                        android:layout_marginBottom="10dp"
                        android:background="#DEE2FF"
                        android:id="@+id/chamber_address" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Address"
                        android:id="@+id/address"
                        android:layout_marginBottom="10dp"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:background="#ffffff"
                        android:layout_below="@+id/chamber_address" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Appointment On"
                        android:background="#DEE2FF"

                        android:id="@+id/textView3"
                        android:layout_marginBottom="10dp"
                        android:layout_below="@+id/address" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Appointment"
                        android:id="@+id/appointment"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_below="@+id/textView3"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Visiting Fee"
                        android:id="@+id/category"
                        android:background="#DEE2FF"
                        android:layout_below="@+id/appointment"
                        android:layout_marginBottom="10dp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Fee"
                        android:layout_below="@+id/category"
                        android:id="@+id/visiting_fees"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp" />

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Arrival Time"
                    android:id="@+id/textView7"
                    android:background="#DEE2FF"
                    android:layout_below="@+id/visiting_fees"
                    android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Arrival"
                        android:layout_below="@+id/textView7"
                        android:id="@+id/arrival_time"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Leave Time"
                        android:id="@+id/leave"
                        android:background="#DEE2FF"
                        android:layout_below="@+id/arrival_time"
                        android:layout_marginBottom="10dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Arrival"
                        android:layout_below="@+id/leave"
                        android:id="@+id/leave_time"
                        android:background="#ffffff"
                        android:textColor="#000000"
                        android:textSize="16dp"
                        android:layout_marginBottom="10dp" />

                </RelativeLayout>







    </android.support.v7.widget.CardView>


</LinearLayout>