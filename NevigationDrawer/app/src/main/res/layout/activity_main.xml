<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:background="@color/material_blue_grey_800"
    android:layout_height="match_parent"
    android:paddingBottom="2dp"
    android:paddingLeft="2dp"
    android:paddingRight="2dp"
    android:paddingTop="1dp"
    tools:context="com.example.tumpa.cardviewtest.MainActivity"
    android:orientation="vertical">




    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        cardview:cardCornerRadius="5dp">


    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#DEE2FF"
        >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:id="@+id/doc_img"
            android:src="@drawable/doc_one"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:id="@+id/doc_name_tv"
            android:layout_toRightOf="@+id/doc_img"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:text="Dr. Hamidur"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:id="@+id/doc_degree"
            android:layout_toRightOf="@+id/doc_img"
            android:layout_below="@+id/doc_name_tv"
            android:text="MBBS"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dentist"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:id="@+id/doctor_field"
            android:layout_below="@+id/doc_degree"
            android:layout_alignLeft="@+id/doc_degree"
            android:layout_alignStart="@+id/doc_degree" />
        <RatingBar
            android:background="#DEE2ED"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:clickable="false"
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:layout_below="@+id/doctor_field"
            android:layout_alignLeft="@+id/doctor_field"
            android:id="@+id/ratingBar" />


    </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>
